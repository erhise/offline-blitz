{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2015", "esnext", "dom"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "examples"
  ]
}

